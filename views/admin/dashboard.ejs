  <div class="container" style="margin-top: 80px;">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>User Management</h3>
  </div>

</div>
    <!-- USER TABLE -->
    <table class="table table-hover bg-white shadow-sm">
      <thead class="table-header">
        <tr>
          <th> Index </th>
          <th>  Email  </th>
          <th>  Actions  </th>
        </tr>
      </thead>

      <tbody id="userTable">
        <% users.forEach((user, index)=> { %>
          <tr>
            <td>
              <%= index+1 %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editUserModal" data-email="<%- user.email %>" data-index="<%= index %>" data-id="<%- user._id %>"
                onclick="loadUser(this.dataset.email, this.dataset.id)">
                Edit
                
              </button>
              <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"
                data-id="<%- user._id %>" onclick="setDeleteIndex(this.dataset.id)">
                Delete
              </button>

            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>

  <!-- ADD USER MODAL -->
  <div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/addUser" method="POST" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add User</h5>
        </div>
        <div class="modal-body">
          <input type="email" name="email" class="form-control mb-2" placeholder="Email" required>
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="modal-footer">
          <button class="btn btn-success">Add</button>
        </div>
      </form>
    </div>
  </div>

  <!-- EDIT USER MODAL -->
  <div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/editUser" method="POST" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit User</h5>
        </div>

        <div class="modal-body">
          <input type="hidden" id="editId" name="_id">

          <input type="email" id="editEmail" name="email" class="form-control mb-2" required>
          <input type="password" id="editPassword" name="password" class="form-control" placeholder="New Password" required>
        </div>

        <div class="modal-footer">
          <button class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- DELETE MODAL -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/deleteUser" method="POST" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete User</h5>
        </div>

        <div class="modal-body">
          <input type="hidden" id="deleteId" name="_id">
          <p>Are you sure you want to delete this user?</p>
        </div>

        <div class="modal-footer">
          <button class="btn btn-danger">Delete</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- SEARCH + EDIT BUTTON LOGIC -->
  <script>
    // Search filter
    document.getElementById("searchInput").addEventListener("keyup", function () {
      const searchValue = this.value.toLowerCase();
      const rows = document.querySelectorAll("#userTable tr");

      rows.forEach(row => {
        const email = row.children[1].innerText.toLowerCase();
        row.style.display = email.includes(searchValue) ? "" : "none";
      });
    });

    // Load user data into edit form
    function loadUser(email, id) {
      
      document.getElementById("editEmail").value = email;
      document.getElementById("editId").value = id;
    }

    // Delete record index
    function setDeleteIndex(id) {
      document.getElementById("deleteId").value = id;
    }
  </script>

</body>

